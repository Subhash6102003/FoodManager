<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/dancingscriptvariablefontwght"
        android:text="Food Donation"
        android:textSize="34sp"
        android:textStyle="bold" />

    <!-- First Donation Entry -->
    <RelativeLayout
        android:id="@+id/donation_entry1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text">

        <!-- Customer Image -->
        <ImageView
            android:id="@+id/customer_image"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_marginEnd="16dp" />
        <!--        android:src="@drawable/customer_image_placeholder"-->

        <!-- Customer Name -->
        <TextView
            android:id="@+id/customer_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/customer_image"
            android:text="Name Customer"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Quantity -->
        <TextView
            android:id="@+id/quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_name_text"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/customer_image"
            android:text="Quantity:"
            android:textSize="16sp" />

        <!-- Quantity Value -->
        <TextView
            android:id="@+id/quantity_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_name_text"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/quantity_text"
            android:text="2"
            android:textSize="16sp" />

        <!-- Accept Button -->
        <Button
            android:id="@+id/accept_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/quantity_value_text"

            android:text="Accept"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
        <!--        android:background="@drawable/rounded_button_green"-->
    </RelativeLayout>

    <!-- Second Donation Entry -->
    <RelativeLayout
        android:id="@+id/donation_entry2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/donation_entry1"
        android:layout_marginTop="16dp">

        <!-- Customer Image -->
        <ImageView
            android:id="@+id/customer_image2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp" />

        <!--        android:src="@drawable/customer_image_placeholder"-->
        <!-- Customer Name -->
        <TextView
            android:id="@+id/customer_name_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/customer_image2"
            android:text="Name Customer"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Quantity -->
        <TextView
            android:id="@+id/quantity_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_name_text2"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/customer_image2"
            android:text="Quantity:"
            android:textSize="16sp" />

        <!-- Quantity Value -->
        <TextView
            android:id="@+id/quantity_value_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_name_text2"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/quantity_text2"
            android:text="5"
            android:textSize="16sp" />

        <!-- Dispatch Button -->
        <Button
            android:id="@+id/dispatch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/quantity_value_text2"
            android:text="Dispatch"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!--        android:background="@drawable/rounded_button_green"-->
    </RelativeLayout>

    <!-- Third Donation Entry -->
    <RelativeLayout
        android:id="@+id/donation_entry3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/donation_entry2"
        android:layout_marginTop="16dp">

        <!-- Customer Image -->
        <ImageView
            android:id="@+id/customer_image3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="16dp" />

        <!--        android:src="@drawable/customer_image_placeholder"-->
        <!-- Customer Name -->
        <TextView
            android:id="@+id/customer_name_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/customer_image3"
            android:text="Name Customer"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Quantity -->
        <TextView
            android:id="@+id/quantity_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_name_text3"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/customer_image3"
            android:text="Quantity:"
            android:textSize="16sp" />

        <!-- Quantity Value -->
        <TextView
            android:id="@+id/quantity_value_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_name_text3"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/quantity_text3"
            android:text="7"
            android:textSize="16sp" />

        <!-- Dispatch Button -->
        <Button
            android:id="@+id/dispatch_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/quantity_value_text3"
            android:text="Dispatch"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!--        android:background="@drawable/rounded_button_green"-->
    </RelativeLayout>

    <!-- NGOs and Donation Organizations Info -->
    <TextView
        android:id="@+id/ngo_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/donation_entry3"
        android:layout_marginTop="16dp"
        android:text="NGOs and Donation Organizations:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- NGO 1 Info -->
    <TextView
        android:id="@+id/ngo1_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ngo_info_text"
        android:layout_marginTop="8dp"
        android:text="NGO 1: XYZ Foundation\nContact: 123-456-7890\nEmail: xyzfoundation@example.com"
        android:textSize="16sp" />

    <!-- NGO 2 Info -->
    <TextView
        android:id="@+id/ngo2_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ngo1_info_text"
        android:layout_marginTop="8dp"
        android:text="NGO 2: ABC Charity\nContact: 987-654-3210\nEmail: abccharity@example.com"
        android:textSize="16sp" />

    <!-- Donation Drive Info -->
    <TextView
        android:id="@+id/drive_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ngo2_info_text"
        android:layout_marginTop="16dp"
        android:text="Donation Drive Organizers:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Donation Drive Organizer 1 Info -->
    <TextView
        android:id="@+id/drive1_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drive_info_text"
        android:layout_marginTop="8dp"
        android:text="Drive Organizer 1: Community Services\nContact: 555-123-4567\nEmail: communityservices@example.com"
        android:textSize="16sp" />

    <!-- Donation Drive Organizer 2 Info -->
    <TextView
        android:id="@+id/drive2_info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drive1_info_text"
        android:layout_marginTop="8dp"
        android:text="Drive Organizer 2: Helping Hands\nContact: 111-222-3333\nEmail: helpinghands@example.com"
        android:textSize="16sp" />

</RelativeLayout>

